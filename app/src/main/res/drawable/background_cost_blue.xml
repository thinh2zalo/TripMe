<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/HeavyBlue"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <stroke android:width="1dp" android:color="@color/HeavyBlue"/>
            <solid android:color="@color/FlatBlue" android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <solid android:color="@color/FlatBlue"/>
        </shape>
    </item>
</ripple>