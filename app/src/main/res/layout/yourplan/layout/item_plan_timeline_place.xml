<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/time_from_text_view"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="5:00"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginStart="16dp"/>
    <ImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="@id/time_from_text_view"
        app:layout_constraintEnd_toEndOf="@id/time_from_text_view"
        app:layout_constraintTop_toBottomOf="@id/time_from_text_view"
        android:src="@drawable/ic_location_on_black_24dp"
        android:tint="@color/FlatRed"
        android:padding="5dp"
        />
    <TextView
        android:id="@+id/time_to_text_view"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/icon"
        app:layout_constraintStart_toStartOf="@id/time_from_text_view"
        tools:text="5:00"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="14sp"/>
    <View
        android:id="@+id/content_parent"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/time_from_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/background_make_schedule_stroke_heavy"/>
    <TextView
        android:id="@+id/place_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/content_parent"
        app:layout_constraintBottom_toBottomOf="@id/content_parent"
        app:layout_constraintStart_toStartOf="@id/content_parent"
        app:layout_constraintEnd_toStartOf="@id/cost_text_view"
        tools:text="Bến xe miền đông"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        />
    <TextView
        android:id="@+id/cost_text_view"
        android:layout_width="120dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/place_text_view"
        app:layout_constraintBottom_toBottomOf="@id/place_text_view"
        app:layout_constraintStart_toEndOf="@id/place_text_view"
        app:layout_constraintEnd_toStartOf="@id/menu_button"
        tools:text="600.000 đ"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/place_text_view"
        app:layout_constraintBottom_toBottomOf="@id/place_text_view"
        app:layout_constraintEnd_toEndOf="@id/place_text_view"
        android:background="@color/FlatOrange"/>
    <ImageView
        android:id="@+id/menu_button"
        android:layout_width="35dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@id/content_parent"
        app:layout_constraintTop_toTopOf="@id/content_parent"
        app:layout_constraintBottom_toBottomOf="@id/content_parent"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>