<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="64dp">
            <TextView
                android:id="@+id/start_time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Thời gian xuất phát"
                android:textColor="#444"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>
            <EditText
                android:id="@+id/start_date_edit_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="@id/start_time_text"
                app:layout_constraintEnd_toStartOf="@id/start_hour_edit_text"
                app:layout_constraintTop_toBottomOf="@id/start_time_text"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:text="Ngày 2"
                android:gravity="center"
                android:hint="Chọn ngày"
                android:textSize="14sp"
                android:background="@drawable/background_round_stroke"/>
            <EditText
                android:id="@+id/start_hour_edit_text"
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="@id/start_date_edit_text"
                app:layout_constraintEnd_toEndOf="@id/start_time_text"
                android:background="@drawable/background_round_stroke"
                android:text="8:00"
                android:hint="0:00"
                android:textSize="14sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/in_time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Tham quan trong ..."
                android:textColor="#444"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/start_date_edit_text"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>
            <EditText
                android:id="@+id/in_time_edit_text"
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="@id/start_time_text"
                app:layout_constraintTop_toBottomOf="@id/in_time_text"
                android:layout_marginTop="8dp"
                android:text="01:30"
                android:gravity="center"
                android:hint="0:00"
                android:textSize="14sp"
                android:background="@drawable/background_round_stroke"/>
            <TextView
                android:id="@+id/place_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Điểm đến"
                android:textColor="#444"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/in_time_edit_text"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>
            <EditText
                android:id="@+id/place_edit_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="@id/start_time_text"
                app:layout_constraintEnd_toEndOf="@id/start_time_text"
                app:layout_constraintTop_toBottomOf="@id/place_text"
                android:layout_marginTop="8dp"
                android:text="Thung lũng tình yêu"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:hint="0:00"
                android:textSize="14sp"
                android:background="@drawable/background_round_stroke"/>
            <TextView
                android:id="@+id/price_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Chi phí dự kiến"
                android:textColor="#444"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/place_edit_text"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>
            <EditText
                android:id="@+id/price_edit_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="@id/start_time_text"
                app:layout_constraintEnd_toEndOf="@id/start_time_text"
                app:layout_constraintTop_toBottomOf="@id/price_text"
                android:layout_marginTop="8dp"
                android:text="150.000"
                android:gravity="center_vertical"
                android:hint="Nhập chi phí"
                android:paddingStart="16dp"
                android:textSize="14sp"
                android:background="@drawable/background_round_stroke"/>
            <TextView
                android:id="@+id/note_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Ghi chú"
                android:textColor="#444"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/price_edit_text"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>
            <EditText
                android:id="@+id/note_edit_text"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_constraintStart_toStartOf="@id/start_time_text"
                app:layout_constraintEnd_toEndOf="@id/start_time_text"
                app:layout_constraintTop_toBottomOf="@id/note_text"
                android:layout_marginTop="8dp"
                android:gravity="start|top"
                android:padding="16dp"
                android:hint="Nhập ghi chú"
                android:textSize="14sp"
                android:background="@drawable/background_round_stroke"/>
            <TextView
                android:id="@+id/cancel_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Hủy"
                android:textColor="@color/FlatOrange"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/start_time_text"
                app:layout_constraintEnd_toStartOf="@id/save_button"
                android:textAllCaps="true"
                android:gravity="center"
                android:background="@drawable/background_make_schedule_stroke"
                app:layout_constraintTop_toBottomOf="@id/note_edit_text"
                android:layout_marginTop="32dp"
                android:clickable="true"
                android:focusable="true"/>
            <TextView
                android:id="@+id/save_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Lưu"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/cancel_button"
                app:layout_constraintEnd_toEndOf="@id/start_time_text"
                android:textAllCaps="true"
                android:gravity="center"
                android:background="@drawable/background_make_schedule_heavy"
                app:layout_constraintTop_toTopOf="@id/cancel_button"
                android:clickable="true"
                android:textSize="14sp"
                android:focusable="true"/>
            <ImageView
                android:id="@+id/drop_button_start_date"
                android:layout_width="35dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="@id/start_date_edit_text"
                app:layout_constraintEnd_toEndOf="@id/start_date_edit_text"
                android:src="@drawable/dropdown"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                app:layout_constraintVertical_chainStyle="packed"
                />
            <ImageView
                android:id="@+id/drop_button_start_hour"
                android:layout_width="35dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="@id/start_hour_edit_text"
                app:layout_constraintEnd_toEndOf="@id/start_hour_edit_text"
                android:src="@drawable/dropdown"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                app:layout_constraintVertical_chainStyle="packed"
                />
            <ImageView
                android:id="@+id/drop_button_in_time"
                android:layout_width="35dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="@id/in_time_edit_text"
                app:layout_constraintEnd_toEndOf="@id/in_time_edit_text"
                android:src="@drawable/dropdown"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                app:layout_constraintVertical_chainStyle="packed"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <View
        android:id="@+id/status_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_24dp"
        android:padding="12dp"
        android:tint="@android:color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="?android:selectableItemBackgroundBorderless"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/back_button"
        app:layout_constraintTop_toTopOf="@id/back_button"
        app:layout_constraintBottom_toBottomOf="@id/back_button"
        android:text="@string/place"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#22666666"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>